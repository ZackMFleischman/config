{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Run Current File's Tests",
        "type": "shell",
        "command": "testFront ${fileBasenameNoExtension}",
        "args": [ ],
        "group": "test",
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "dedicated",
          "clear": true
        },
        "options": {
          "env": {
            "TZ": "Universal",
          }
        }
    },
    {
        "label": "Run Current File's Tests 2",
        "type": "shell",
        "command": "yarn test ${fileBasenameNoExtension}",
        "args": [ ],
        "group": "test",
        "presentation": {
          "reveal": "always",
          "clear": false,
          "focus": false,
          "echo": true,
          "panel": "dedicated"
        }
    },
    {
        "label": "Run All Tests",
        "type": "shell",
        "command": "pops 'Running all tests'; testFront",
        "args": [ ],
        "group": "test",
        "presentation": {
          "echo": true,
          "reveal": "never",
          "focus": false,
          "panel": "dedicated",
          "clear": true
        },
        "options": {
          "env": {
            "TZ": "Universal",
          }
        }
    }
  ]
}
